pid_file /var/run/mosquitto.pid

persistence true
persistence_location /mosquitto/
persistence_file mosquitto.db

user mosquitto

port 1883

log_dest file /mosquitto/mosquitto.log
log_dest stdout
log_dest topic
#log_type error
#log_type warning
#log_type notice
#log_type information
log_type all

connection_messages true
log_timestamp true

allow_anonymous true
